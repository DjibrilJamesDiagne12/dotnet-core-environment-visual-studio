# editorconfig.org

# Indicate this file is the top-most .editorconfig file
root = true

# Global rules
[*]
charset                     = utf-8
end_of_line                 = lf
insert_final_newline        = true
indent_size                 = 4
indent_style                = space
trim_trailing_whitespace    = true

# YAML/YML global rules
[*.{yaml,yml}]
indent_size = 2

# Markdown global rules
[*.md]
indent_size                 = 2
trim_trailing_whitespace    = false
